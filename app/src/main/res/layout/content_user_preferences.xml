<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.android.assignment4android8.UserPreferences"
    tools:showIn="@layout/activity_user_preferences">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserPreferences">

        <EditText
            android:hint="Enter a String"
            android:inputType="text|textCapWords|textAutoCorrect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userInput"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"/>

        <EditText
            android:hint="Enter a String"
            android:inputType="text|textCapWords|textAutoCorrect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userInput2"
            android:layout_below="@+id/userInput"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/userInput"
            android:layout_toStartOf="@+id/userInput"
            android:layout_alignRight="@+id/userInput"
            android:layout_alignEnd="@+id/userInput" />

        <EditText
            android:hint="Enter a String"
            android:inputType="text|textCapWords|textAutoCorrect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userInput3"
            android:layout_below="@+id/userInput2"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/userInput"
            android:layout_toLeftOf="@+id/userInput"
            android:layout_toStartOf="@+id/userInput"
            android:layout_alignEnd="@+id/userInput" />

        <EditText
            android:hint="Enter a String"
            android:inputType="text|textCapWords|textAutoCorrect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userInput4"
            android:layout_below="@+id/userInput3"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/userInput"
            android:layout_toLeftOf="@+id/userInput"
            android:layout_toStartOf="@+id/userInput"
            android:layout_alignEnd="@+id/userInput" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Button"
            android:id="@+id/saveButton"
            android:layout_below="@+id/userInput4"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"/>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
